---
import MainLayout from "../layouts/MainLayout.astro";
import Title from "../components/ui/Title.astro";

import { tools } from "../tools.json";
---

<MainLayout title="Recursos">
  <main
    class="max-w-[1280px] mx-auto dark:bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] bg-[radial-gradient(#000000_1px,transparent_1px)] [background-size:16px_16px] p-12 text-slate-900 dark:text-slate-100"
  >
    <Title title="Mis recursos" />

    <search>
      <form>
        <input
          name="search"
          id="search"
          placeholder="Buscar ..."
          class="w-full bg-slate-100 border-[3px] border-slate-900 dark:border-slate-100 rounded"
        />
      </form>
    </search>

    <ul>
      {tools.map((tool) => (<li>{tool.name}</li>))}
    </ul>
  </main>
</MainLayout>

<script></script>
