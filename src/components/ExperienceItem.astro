---
const { name, position, url, startDate, endDate, summary, highlights } =
  Astro.props;
---

<div
  class="relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group text-slate-100 dark:text-slate-900"
>
  <div
    class="flex items-center justify-center size-10 rounded-full border border-slate-900 dark:border-slate-100 bg-sky-500 text-slate-900 dark:text-slate-100 shadow shrink-0 md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2"
  >
    <svg
      class="fill-current"
      xmlns="http://www.w3.org/2000/svg"
      width="12"
      height="10"
    >
      <path
        fill-rule="nonzero"
        d="M10.422 1.257 4.655 7.025 2.553 4.923A.916.916 0 0 0 1.257 6.22l2.75 2.75a.916.916 0 0 0 1.296 0l6.415-6.416a.916.916 0 0 0-1.296-1.296Z"
      ></path>
    </svg>
  </div>

  <div
    class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] bg-slate-900 dark:bg-slate-100 p-4 rounded border border-slate-100 shadow"
  >
    <div class="flex items-center justify-between space-x-2 mb-1">
      <div class="text-lg font-bold">
        {name}
      </div>
      <time class="text-slate-300 dark:text-slate-700"
        >{endDate} - {startDate}</time
      >
    </div>
    <div class="text-slate-300 dark:text-slate-700">{summary}</div>
  </div>
</div>
