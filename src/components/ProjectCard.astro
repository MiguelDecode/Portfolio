---
import GitHub from "../icons/GitHub.astro";
import Web from "../icons/Web.astro";
import Image from "astro/components/Image.astro";

const icon = {
  width: 32,
  height: 32,
};

const { name, image, highlights, repo, live, stack, slug } = Astro.props;
---

<article
  class="relative flex flex-col gap-4 border-[3px] border-slate-900 bg-slate-100 dark:bg-slate-900 dark:border-slate-100 rounded p-6 text-slate-900 dark:text-slate-100"
>
  <a
    href={`/project/${slug}`}
    class="relative -mt-24 hover:cursor-pointer"
  >
    <Image
      src={image}
      alt={name}
      width="640"
      height="480"
      class="mx-auto rounded"
      transition:name={`project-${name}`}
    />
  </a>
  <h2 class="font-bold text-3xl">{name}</h2>
  <p class="line-clamp-6 flex-grow"></p>
  <div class="flex flex-wrap justify-end gap-2">
    {
      stack.map((tech) => (
        <span class="cursor-default text-sm border-[3px] border-slate-900 dark:border-slate-100 rounded px-1 capitalize">
          {tech}
        </span>
      ))
    }
  </div>

  <div class="flex items-center justify-between">
    <a href={live} target="_blank" rel="noopener noreferrer">
      <Web {...icon} />
    </a>
    <a href={repo} target="_blank" rel="noopener noreferrer">
      <GitHub {...icon} />
    </a>
  </div>
</article>
